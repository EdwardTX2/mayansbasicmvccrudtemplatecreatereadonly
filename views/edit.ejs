<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Page</title>
    <link rel="stylesheet" href="">
</head>
<body>
    <section>
        <h1>This is the Edit Page!</h1>
        <section>
            <ul>
                <% itemList.forEach(item => { %>
                    <% if (item._id = idItem) { %>
                        <form action="/edit/update/<%= item._id%>" method="POST">
                            <label for="textinput">Edit Text</label>
                            <input type="text" name="textinput" value="<%= item.textinput %>" required><br>
                            <label for="numinput">Edit Number</label>
                            <input type="number" name="numinput" value="<%+ item.numinput %>" required><br>
                            <button type="submit">Confirm</button>
                            <a href="/">Cancel</a>
                        </form> 
                    <% } else { %>
                        <li>
                            <div><%=item.textinput %></div>
                            <div><%=item.numinput %></div>
                            <a href="">Edit</a>
                            <a href="">Remove</a><hr>
                        </li>
                    <% } %>
                <% }) %>         
            </ul>
        </section>
    </section>
    
</body>
</html>